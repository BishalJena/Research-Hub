# Application
APP_NAME=Smart Research Hub
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# Database
DATABASE_URL=postgresql://research_user:research_pass@db:5432/research_hub
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# APCCE Integration (Mock for development)
APCCE_CLIENT_ID=your-apcce-client-id
APCCE_CLIENT_SECRET=your-apcce-client-secret
APCCE_API_URL=https://apcce.gov.in/api
APCCE_OAUTH_URL=https://apcce.gov.in/oauth

# Academic APIs
SEMANTIC_SCHOLAR_API_KEY=
CROSSREF_EMAIL=your-email@example.com
OPENALEX_EMAIL=your-email@example.com

# Vector Database
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=research-hub

# ============================================================================
# AI/ML API KEYS (REQUIRED for API-based architecture!)
# ============================================================================

# ----------------------------------------------------------------------------
# OpenRouter API (RECOMMENDED - Cheaper & Multiple Models!)
# ----------------------------------------------------------------------------
# Get your key from: https://openrouter.ai/keys
# Benefits:
#   - 50-80% CHEAPER than direct OpenAI
#   - $5-10 FREE credits on signup
#   - Access to GPT-4, Claude, Llama, Gemini, and 100+ models
#   - OpenAI-compatible API (just change endpoint!)
#
# Pricing Examples:
#   - GPT-3.5-Turbo:     $0.10/1M tokens (vs $0.50 with OpenAI)
#   - Claude 3 Haiku:    $0.25/1M tokens (Best value!)
#   - Claude 3 Sonnet:   $3.00/1M tokens (High quality)
#   - Llama 3 70B:       FREE (open source)
#
# For your PoC (8 users, 2 months): $2-10 total (vs $10-20 with OpenAI)
# ----------------------------------------------------------------------------

OPENAI_API_KEY=sk-or-v1-YOUR_OPENROUTER_KEY_HERE
OPENAI_API_BASE=https://openrouter.ai/api/v1

# Model Selection (choose one):
# For Development/Testing (FREE):
#   OPENAI_MODEL=meta-llama/llama-3-70b-instruct
#   OPENAI_MODEL=mistralai/mistral-7b-instruct
#
# For Demo/Production (Best Value - RECOMMENDED):
OPENAI_MODEL=anthropic/claude-3-haiku
#   Cost: $0.25/1M tokens, Fast, High Quality
#
# For Best Quality (if budget allows):
#   OPENAI_MODEL=anthropic/claude-3-sonnet
#   OPENAI_MODEL=openai/gpt-4o
#
# Alternative OpenAI models:
#   OPENAI_MODEL=openai/gpt-3.5-turbo  (cheaper on OpenRouter: $0.10/1M)
#   OPENAI_MODEL=openai/gpt-4-turbo

# OpenRouter Settings
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3
OPENROUTER_APP_NAME=Smart Research Hub
OPENROUTER_APP_URL=https://research-hub.apcce.gov.in

# ----------------------------------------------------------------------------
# Alternative: Direct OpenAI API (Not Recommended - More Expensive)
# ----------------------------------------------------------------------------
# If you want to use direct OpenAI instead:
# 1. Get key from: https://platform.openai.com/api-keys
# 2. Comment out OPENAI_API_BASE above
# 3. Set: OPENAI_MODEL=gpt-3.5-turbo
# Cost: $0.50/1M tokens (5x more expensive than OpenRouter)

# Cohere API (for Embeddings - replaces SPECTER/Sentence-BERT)
# Get your key from: https://dashboard.cohere.com/api-keys
# Cost: FREE tier (1000 calls/month), then $0.0001 per embed
COHERE_API_KEY=
COHERE_MODEL=embed-english-v3.0

# Bhashini API (for Translation - replaces IndicTrans2)
# Get your key from: https://bhashini.gov.in/ulca
# Cost: FREE (Government of India service!)
BHASHINI_API_KEY=
BHASHINI_USER_ID=
BHASHINI_API_ENDPOINT=https://api.bhashini.gov.in

# Feature Flags
USE_API_MODELS=true  # Set to false to use local models (not recommended)
ENABLE_TRANSLATION=true

# API Cost Monitoring
API_BUDGET_ALERT_THRESHOLD=40  # USD
API_BUDGET_HARD_LIMIT=50  # USD
TRACK_API_USAGE=true

# File Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
